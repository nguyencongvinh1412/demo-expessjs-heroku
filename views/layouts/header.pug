doctype html
html 
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        block title 
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x' crossorigin='anonymous')
        // JavaScript Bundle with Popper
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js' integrity='sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4' crossorigin='anonymous')

    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            .container-fluid
                a.navbar-brand(href='#')
                    img(src="/image/logo.png", alt="logo", style="height: 40px; width:40px;")
                button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarSupportedContent.collapse.navbar-collapse
                    ul.navbar-nav.me-auto.mb-2.mb-lg-0
                        li.nav-item
                            a.nav-link.active(aria-current='page' href='/') Home
                        li.nav-item
                            a.nav-link(href='/users') Users List
                        li.nav-item
                            a.nav-link(href='/users/create') Create New User

                    form.d-flex
                        input.form-control.me-2(type='search' placeholder='Search' aria-label='Search')
                        button.btn.btn-outline-success(type='button') Search

                    .navbar-nav.mb-2.mb-lg-0.dropdown
                        .nav-item
                        if user
                           a.nav-link.dropdown-toggle(id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false")= user ? user.name : ''
                           .dropdown-menu(aria-labelledby="dropdownMenuButton1")
                                a.dropdown-item(href="/auth/logout") Log Out
                                

        block content
        block footer